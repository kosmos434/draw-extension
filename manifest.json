{

  "manifest_version": 2,
  "name": "Easy Draw",
  "version": "1.0",

  "description": "Draw on your screen",

  "icons": {
    "48": "icons/pencil-48.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/pencil-32.png",
    "default_title": "Draw it!",
    "default_popup": "popup.html",
    "browser_style": true
  }

}